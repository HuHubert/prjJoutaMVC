                                            <div class="mx-auto mb-3">
                                                內容：<textarea name="f活動內容"></textarea>
                                            </div>
                                        </div>

                                        <!-- jou modal btns -->
                                        <div class="modal-footer  mt-2 border-main-color">
                                            <input type="submit" class="btn btnSubmit" style="background-color:#fee567"
                                                   value="送出">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">關閉</button>
                                        </div>

                                        <!-- jouta modal hidden -->
                                        <input type="hidden" name="f活動瀏覽次數" value="0">
                                        <input type="hidden" name="f活動類型" value="飯局">
                                        <input type="hidden" name="f活動讚數" value="0">
                                        <input type="hidden" name="f活動結束時間" value="f活動開始時間">
                                        <input type="hidden" name="f活動發起日期" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")">
                                    </form>
                                }
                                else
                                {
                                    <p>請先登入會員</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 活動清單 -->
                <div class="questbox col-xl-9 col-lg-9 col-md">
