@model IIIProject_travel.ViewModel.CEat
@{
    Layout = null;
    var x = (tMember)Session["member"];
}

<!DOCTYPE html>
<html lang="zh-Hant-TW">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jouta | 揪吃</title>
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/css/style.css")
    @Styles.Render("~/Content/css/eat.css")
    <link rel="shortcut icon" href="favicon.ico" />
</head>

<body>
    <div class="container-fluid">
        <!-- navbar -->
        <nav class="navbar navbar-expand-lg navbar-light header" id="main">
            <div class="container">
                <a class="navbar-brand" href="main.html">
                    <img src="~/Content/images/joutalogo_black.png" alt="" width="100">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">@Html.ActionLink("首頁", "Home", "Home", new { }, new { @class = "nav-link nav-main text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找飯局", "EatIndex", "Eat", new { }, new { @class = "nav-link nav-eat text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找旅遊", "TravelIndex", "Travel", new { }, new { @class = "nav-link nav-travel text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找文章", "List", "Blog", new { }, new { @class = "nav-link nav-blog text-dark" })</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        @if (Session["member"] != null)
                        {
                            <li class="nav-item nav-link nav-login text-dark">觀迎 @x.f會員名稱 </li>
                            <li class="nav-item">@Html.ActionLink("登出", "Home", "Home", new { id = 0 }, new { @class = "nav-link nav-login text-dark" })</li>
                        }
                        else
                        {
                            <li class="nav-item">@Html.ActionLink("登入", "LoginIndex", "Login", new { }, new { @class = "nav-link nav-login text-dark" })</li>
                        }
                        <li class="nav-item">@Html.ActionLink("註冊", "Register", "Home", new { }, new { @class = "nav-link nav-register text-dark" })</li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <!-- filter -->
    <div class="container-fluid filter" id="filter">
        <div class="container text-white">
            <form class="top_form">
                <div class="form-row">
                    <div class="col">
                        <input type="text" class="form-control" placeholder="請輸入地區">
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" placeholder="請輸入時間">
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" placeholder="請輸入開團主">
                    </div>
                    <div class="col">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle btn-block" type="button"
                                    id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                                    aria-expanded="false">
                                揪團狀態
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">未額滿</a>
                                <a class="dropdown-item" href="#">額滿</a>
                                <a class="dropdown-item" href="#">已結束</a>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btnContent">搜尋</button>
                </div>
            </form>
        </div>
    </div>

    <!-- main_quest -->
    <div class="container-fluid">
        <div class="container quests">
            <div class="d-flex">
                <!-- 篩選器 -->
                <div class="sortby">
                    <button type="submit" class="btn btnContent btn-lg btn-block mb-5" id="sortbyitems"
                            data-toggle="modal" data-target="#JouModal">
                        Jou團去!
                    </button>
                    <p class="mb-3" id="sortbyitems">搜尋結果排序根據</p>
                    <button type="button" class="btn btn-outline-warning btn-lg btn-block mb-3"
                            id="sortbyitems">
                        時間
                    </button>
                    <button type="button" class="btn btn-outline-warning btn-lg btn-block mb-3"
                            id="sortbyitems">
                        地區
                    </button>
                    <button type="button" class="btn btn-outline-warning btn-lg btn-block mb-3"
                            id="sortbyitems">
                        評分
                    </button>
                    <button type="button" class="btn btn-outline-warning btn-lg btn-block mb-3"
                            id="sortbyitems">
                        瀏覽次數
                    </button>
                </div>

                <!-- jou modal head -->
                <div class="modal fade" id="JouModal" tabindex="-1" role="dialog" aria-labelledby="JouModalLabel"
                     aria-hidden="true">
                    <div class="modal-dialog change-max-width-1400" role="document">
                        <div class="modal-content">
                            <div class="modal-header border-main-color">
                                <h5 class="modal-title" id="exampleModalLabel">
                                    <span style="font-weight:bolder;">
                                        開團
                                    </span>
                                </h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <!-- jou modal content -->
                            @if (Session["member"] != null)
                            {
                                <form enctype="multipart/form-data" method="post">
                                    <div class="modal-body">
                                        <div class="container">
                                            <p>
                                                <img src="~/Content/images/19.png" class="mb-1" alt="">標題：<input type="text"
                                                                                                                 name="f開團標題" style="width:90%">
                                            </p>
                                            <div class="m-0 mb-3 modalContent d-flex justify-content-around">
                                                <div class="modalContentLeft">
                                                    <p>
                                                        <img src="~/Content/images/08.png" class="mb-1" alt="">活動開始日期： <input type="date"
                                                                                                                              name="f活動開始時間">
                                                    </p>
                                                    @*<p>
                                                            <img src="~/Content/images/08.png" class="mb-1" alt="">旅遊結束日期： <input type="date"
                                                                                                                                  name="UserName">
                                                        </p>
                                                        <p>
                                                            <img src="~/Content/images/08.png" class="mb-1" alt="">入團截止日期： <input type="date"
                                                                                                                                  name="UserName">
                                                        </p>*@

                                                    <p>
                                                        <img src="~/Content/images/20.png" class="mb-1" alt="">團圖：<input type="File"
                                                                                                                         name="fImgPath">
                                                    </p>
                                                </div>
                                                <div class="modalContentRight">
                                                    <p>
                                                        <img src="~/Content/images/04.png" class="mb-1" alt="">預算：<input type="text"
                                                                                                                         name="f預算">
                                                    </p>
                                                    <p>
                                                        <img src="~/Content/images/17.png" class="mb-1" alt="">分類：<input type="text"
                                                                                                                         name="f分類">
                                                    </p>
                                                    @*<p>
                                                            <img src="~/Content/images/13.png" class="mb-1" alt="">標籤：<input type="text"
                                                                                                                             name="UserName">
                                                        </p>*@
                                                    <p class="pt-2">
                                                        <img src="~/Content/images/03.png" class="mb-1" alt="">
                                                        地區：
                                                        <select name="f地點" id="">
                                                            <option value="">北部</option>
                                                            <option value="">中部</option>
                                                            <option value="">南部</option>
                                                            <option value="">東部</option>
                                                        </select>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row align-items-center">
                                            <div class="mx-auto mb-3">
                                                內容：<textarea name="f內容"
                                                             style="width:1000px;height:220px;vertical-align:top;"></textarea>
                                            </div>
                                        </div>

                                    </div>
                                    <!-- jouta modal btn -->
                                    <div class="modal-footer  mt-2 border-main-color">
                                        <button type="submit" class="btn" style="background-color:#fee567"
                                                data-dismiss="modal">
                                            送出
                                        </button>
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">關閉</button>
                                    </div>

                                    <!-- jouta modal hidden -->
                                    <input type="hidden" name="f帳號" value="0">
                                    <input type="hidden" name="f大頭貼" value="0">
                                    <input type="hidden" name="f點讚次數" value="0">
                                    <input type="hidden" name="f建立時間" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                                    <input type="hidden" name="f暱稱" value="Test">
                                </form>
                            }
                            else
                            {
                                <p>請先登入會員</p>
                            }
                        </div>
                    </div>
                </div>

                <!-- 活動清單 -->
                <div class="questbox">
                    <!-- 活動格 -->
                    <div class="qBoxblock d-flex mb-4">
                        <!-- box左 -->
                        <div class="qEvent">
                            <!-- 團主 -->
                            <div class="eMember d-flex">
                                <!-- 團主頭貼 -->
                                <div class="memberAvatar mr-1">
                                    <img src="~/Content/images/memberAvatar.jpg" alt="">
                                </div>
                                <!-- 團主稱號&名字 -->
                                <div class="memberInfo">
                                    <!-- 團主稱號 -->
                                    <div class="memberTitle">一天八餐</div>
                                    <!-- 團主名 -->
                                    <div class="memberName">no face</div>
                                </div>
                                <!-- 團主評分 -->
                                <div class="memberRating">☆4.7</div>
                            </div>
                            <!-- 活動圖 -->
                            <div class="eEventPic">
                                <img src="~/Content/images/foods.jpg" alt="">
                            </div>
                        </div>
                        <!-- box右 -->
                        <div class="qContent">
                            <!-- 標題 -->
                            <div class="cTitle mb-1">豪大雞排·非吃不可 </div>
                            <!-- 時間 -->
                            <div class="cStartTime mb-1">．2020/08/18 18:55</div>
                            <!-- 地點 -->
                            <div class="cPosition">．臺北, 台北車站西三門</div>
                            <hr>
                            <!-- 簡易資訊 -->
                            <div class="cInfo">
                                約在火車站的火字下方

                                數量無限♾

                                標示時間為離開時間
                            </div>
                            <!-- 社交按鈕 -->
                            <div class="cSocial btn-group" role="group" aria-label="Basic example">
                                <button type="button" class="btn btn-outline-warning">關注</button>
                                <button type="button" class="btn btn-outline-warning">分享</button>
                                <button type="button" class="btn btn-outline-warning">留言</button>
                            </div>
                        </div>
                    </div>

                    <!-- 活動格 -->
                    <div class="qBoxblock d-flex mb-4">
                        <!-- box左 -->
                        <div class="qEvent">
                            <!-- 團主 -->
                            <div class="eMember d-flex">
                                <!-- 團主頭貼 -->
                                <div class="memberAvatar mr-1">
                                    <img src="~/Content/images/f899c3a6-45ba-4d37-ba05-8f4e031b0a63.jpg" alt="">
                                </div>
                                <!-- 團主稱號&名字 -->
                                <div class="memberInfo">
                                    <!-- 團主稱號 -->
                                    <div class="memberTitle">吃后</div>
                                    <!-- 團主名 -->
                                    <div class="memberName">kimchi</div>
                                </div>
                                <!-- 團主評分 -->
                                <div class="memberRating">☆4.9</div>
                            </div>
                            <!-- 活動圖 -->
                            <div class="eEventPic">
                                <img src="~/Content/images/c59f5955-4991-4bbb-9989-dde3670ec9e7.jpg" alt="">
                            </div>
                        </div>
                        <!-- box右 -->
                        <div class="qContent">
                            <!-- 標題 -->
                            <div class="cTitle mb-1">
                                不能只有我吃到之Molino de Urdániz
                            </div>
                            <!-- 時間 -->
                            <div class="cStartTime mb-1">．2020/08/18 19:00</div>
                            <!-- 地點 -->
                            <div class="cPosition">．臺北, Molino de Urdániz 渥達尼斯磨坊</div>
                            <hr>
                            <!-- 簡易資訊 -->
                            <div class="cInfo">
                                沒事想嚐嚐西班牙來的分子料理，內建人氣踩雷專家與愛酒雅士，再徵一位有興趣的朋友。若報名朋友超過一位，則會再詢問餐廳可否加位。
                            </div>
                            <!-- 社交按鈕 -->
                            <div class="cSocial btn-group" role="group" aria-label="Basic example">
                                <button type="button" class="btn btn-outline-warning">關注</button>
                                <button type="button" class="btn btn-outline-warning">分享</button>
                                <button type="button" class="btn btn-outline-warning">留言</button>
                            </div>
                        </div>
                    </div>

                    <!-- 活動格 -->
                    <div class="qBoxblock d-flex mb-4">
                        <!-- box左 -->
                        <div class="qEvent">
                            <!-- 團主 -->
                            <div class="eMember d-flex">
                                <!-- 團主頭貼 -->
                                <div class="memberAvatar mr-1">
                                    <img src="~/Content/images/3.jpg" alt="">
                                </div>
                                <!-- 團主稱號&名字 -->
                                <div class="memberInfo">
                                    <!-- 團主稱號 -->
                                    <div class="memberTitle">旅遊達人</div>
                                    <!-- 團主名 -->
                                    <div class="memberName">Jane</div>
                                </div>
                                <!-- 團主評分 -->
                                <div class="memberRating">☆4.5</div>
                            </div>
                            <!-- 活動圖 -->
                            <div class="eEventPic">
                                <img src="~/Content/images/contact3.jpg" alt="">
                            </div>
                        </div>
                        <!-- box右 -->
                        <div class="qContent">
                            <!-- 標題 -->
                            <div class="cTitle mb-1">廚師下班吃些什麼？ 開鍋囉 </div>
                            <!-- 時間 -->
                            <div class="cStartTime mb-1">．2020/08/18 19:00</div>
                            <!-- 地點 -->
                            <div class="cPosition">．臺北, 汀州路三段196號</div>
                            <hr>
                            <!-- 簡易資訊 -->
                            <div class="cInfo">
                                最近看到一家百元火鍋，料實在，而且明治冰淇淋隨妳吃，感覺老闆佛心來的，就甘心耶‼️

                                約喜歡吃火鍋的朋友下班一起來吃喲～～

                                本月小弟偶生日，別忘了最後說聲「生日快樂喲」
                            </div>
                            <!-- 社交按鈕 -->
                            <div class="cSocial btn-group" role="group" aria-label="Basic example">
                                <button type="button" class="btn btn-outline-warning">關注</button>
                                <button type="button" class="btn btn-outline-warning">分享</button>
                                <button type="button" class="btn btn-outline-warning">留言</button>
                            </div>
                        </div>
                    </div>

                    <!-- 換頁 -->
                    <div class="switchPage">
                        <ul class="pagination justify-content-end">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 熱門團主 -->
    <div class="container-fluid popularMemberDiv">
        <div class="popularTitle">熱門團主</div>
        <div class="container popularMember justify-content-between d-flex pb-5">
            <div class="memberBlock">
                <div class="avatarPart">
                    <img src="~/Content/images/6.jpg" alt="">
                    <div class="memberName">
                        Peipei 吳佩佩
                    </div>
                </div>
                <hr>
                <div class="introducePart">
                    是一個兒童職能治療師，因為擁有對生活的熱情，又不想被上下班打卡綁架，仍有經營個人部落格。
                </div>

            </div>

            <div class="memberBlock">
                <div class="avatarPart">
                    <img src="~/Content/images/5.jpg" alt="">
                    <div class="memberName">
                        迷糊兔Love Eat
                    </div>
                </div>
                <hr>
                <div class="introducePart">
                    除了愛吃之外，我也非常喜歡研究料理，不論是小時候在廚房裡探頭探腦當個愛偷吃的小幫手。
                </div>
            </div>

            <div class="memberBlock">
                <div class="avatarPart">
                    <img src="~/Content/images/4.jpg" alt="">
                    <div class="memberName">
                        Kristin
                    </div>
                </div>
                <hr>
                <div class="introducePart">
                    我是個主觀、偏頗的人，也不追求所謂專業的遊記、書評或影評。
                </div>
            </div>
        </div>
    </div>


    <!-- footer -->
    <div class="container-fluid footer">
        <p class="text-center mt-2 mb-2">&copy; @DateTime.Now.Year Jouta All rights reserved</p>
    </div>

    <!-- script -->
    @Scripts.Render("~/Content/js/jquery-3.5.1.js")
    @Scripts.Render("~/Content/js/popper.min.js")
    @Scripts.Render("~/Content/bootstrap-4.2.1-dist/js/bootstrap.min.js")
    @Scripts.Render("~/Content/js/navbar.js")

    @*<script src="~/Content/js/jquery-3.5.1.js"></script>
        <script src="~/Content/js/popper.min.js"></script>
        <script src="~/Content/bootstrap-4.2.1-dist/js/bootstrap.js"></script>
        <script src="~/Content/js/navbar.js"></script>*@


</body>

</html>
