@model IIIProject_travel.ViewModel.CRegisterModel
@{
    Layout = null;

}

<!DOCTYPE html>
<html lang="zh-Hant-TW">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>註冊 | Jouta</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/register.css" rel="stylesheet" />
</head>

<body>
    <!-- header -->
    <div class="container-fluid">

        <!-- navbar -->
        <nav class="navbar navbar-expand-lg navbar-fixed-top">
            <div class="container">
                <div class="navbar-header" id="main">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <a class="navbar-brand" href="@Url.Action("Home","Home")">
                    <img src="~/Content/images/joutalogo_black.png" alt="" width="100">
                </a>
                <div class="navbar-collapse collapse justify-content-between" id="navbarNav">
                    <ul class="nav navbar-nav">
                        <li class="nav-item active">@Html.ActionLink("首頁", "Home", "Home", new { }, new { @class = "nav-link nav-main text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找飯局", "EatIndex", "Eat", new { }, new { @class = "nav-link nav-eat text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找旅遊", "TravelIndex", "Travel", new { }, new { @class = "nav-link nav-travel text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找文章", "Index", "Blog", new { }, new { @class = "nav-link nav-blog text-dark" })</li>
                    </ul>
                    <ul class="nav navbar-nav">

                        <li class="nav-item">@Html.ActionLink("聯絡我們", "New", "聯絡我們", new { }, new { @class = "nav-link nav-login text-dark" })</li>

                        <li class="nav-item">@Html.ActionLink("關於我們", "About", "Home", new { }, new { @class = "nav-link nav-register text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("登入", "LoginIndex", "Login", new { }, new { @class = "nav-link nav-login text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("註冊", "Register", "Home", new { }, new { @class = "nav-link nav-register text-dark" })</li>

                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12 offset=md-1">
                <div class="row">
                    <div class="col-sm-7 col-md-5 register-left">
                        <a href="main.html"><img src="~/Content/images/joutalogo_white_noborder.png"></a>
                        <h3>立即加入</h3>
                        <p>Join Us</p>
                    </div>
                    <div class="col-sm-5 col-md-7 register-right">
                        <h2>會員註冊</h2>

                        @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {

                            <div class="register-form">
                                <!--    資料驗證開始範圍    -->
                                <div class="alert alert-warning">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.newMember.txtEmail, new { @class = "col-xs-4 col-md-12 form-label" })
                                    <div class="col-xs-8 col-md-11">
                                        @Html.TextBoxFor(model => model.newMember.txtEmail, new { @class = "form-control", id = "txtEmail" })
                                        @Html.ValidationMessageFor(model => model.newMember.txtEmail, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                @*<div class="form-group col-md-11 col-xs-8">
                                        <input type="email" class="form-control" name="txtEmail" placeholder="信箱">
                                        @
                                        @Html.ValidationMessageFor(model => model.newMember.txtEmail, "", new { @class = "text-danger" })
                                    </div>*@


                                <div class="form-group">
                                    @Html.LabelFor(model => model.newMember.txtNickname, new { @class = "col-xs-4 col-md-12 form-label" })
                                    <div class="col-xs-8 col-md-11">
                                        @Html.TextBoxFor(model => model.newMember.txtNickname, new { @class = "form-control", id = "txtEmail" })
                                        @Html.ValidationMessageFor(model => model.newMember.txtNickname, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                @*<div class="form-group col-md-11 col-xs-8">
                                        <input name="txtNickname" type="text" class="form-control" placeholder="使用者名稱">
                                        @Html.ValidationMessageFor(model => model.newMember.txtNickname, "", new { @class = "text-danger" })
                                    </div>*@

                                <div class="form-group">

                                    <div class="col-xs-8 col-md-11">
                                        <input type="file" name="txtFiles" value="" />
                                        @Html.ValidationMessageFor(model => model.newMember.txtFiles, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                @*<div class="userImg  col-md-11 col-xs-8">
                                        @Html.EditorFor(model => model.newMember.txtFiles, new { htmlAttributes = new { @class = "form-control", type = "file" } })
                                    </div>*@
                                <div class="form-group">
                                    @Html.LabelFor(model => model.txtPassword, new { @class = "col-xs-4 col-md-12 form-label" })
                                    <div class="col-xs-8 col-md-11">
                                        <input id="txtPassword" class="form-control" type="password" name="txtPassword" value="" />
                                        @*@Html.TextBoxFor(model => model.txtPassword, new { @class = "form-control", id = "txtEmail" })*@
                                        @Html.ValidationMessageFor(model => model.txtPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                @*<div class="form-group col-md-11 col-xs-8">
                                        <input name="txtPassword" type="password" class="form-control" placeholder="密碼">
                                        @Html.ValidationMessageFor(m => m.txtPassword, "", new { @class = "text-danger" })
                                    </div>*@

                                <div class="form-group">
                                    @Html.LabelFor(model => model.txtPassword_confirm, new { @class = "col-xs-4 col-md-12 form-label" })
                                    <div class="col-xs-8 col-md-11">
                                        <input id="txtPassword_confirm" class="form-control" type="password" name="txtPassword_confirm" value="" />
                                        @*@Html.TextBoxFor(model => model.txtPassword_confirm, new { @class = "form-control", id = "txtEmail" })*@
                                        @Html.ValidationMessageFor(model => model.txtPassword_confirm, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                @*<div class="form-group col-md-11 col-xs-8">
                                        <input name="txtPassword_confirm" type="password" class="form-control" placeholder="再次輸入密碼">
                                        @Html.ValidationMessageFor(m => m.txtPassword_confirm, "", new { @class = "text-danger" })
                                    </div>*@

                                <div class="form-group col-md-11 col-xs-8">
                                    <button type="submit" class="btn btn-primary">註冊</button>
                                    <button type="reset" class="btn btn-warning">清除</button>
                                </div>

                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    }

    <!-- footer -->
    <div class="container-fluid footer">
        <p class="text-center mt-2 mb-2">&copy; @DateTime.Now.Year Jouta All rights reserved</p>
    </div>
    <!-- script -->
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Scripts/IIIProject/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    @*匯入驗證用的js*@
    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>

</html>
