@model IIIProject_travel.ViewModel.CChangePassword
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
        @Scripts.Render("~/bundles/jqueryval")
    }
<h2>修改密碼 <small>@ViewData["ChangeState"]</small></h2>
<div class="form-horizontal">
    @using (Html.BeginForm())
    {
        <div class="alert alert-warning">
            @Html.ValidationSummary()
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.txtPassword, new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.PasswordFor(model => model.txtPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.txtPassword, null, new { @class = "label label-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.txtNewPassword, new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.PasswordFor(model => model.txtNewPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.txtNewPassword, null, new { @class = "label label-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.txtNewPassword_check, new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.PasswordFor(model => model.txtNewPassword_check, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.txtNewPassword_check, null, new { @class = "label label-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input class="btn btn-primary" type="submit" value="修改密碼" />
            </div>
        </div>
    }
</div>

