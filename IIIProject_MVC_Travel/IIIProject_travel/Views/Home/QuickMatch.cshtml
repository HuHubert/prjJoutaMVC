
@{
    Layout = null;
    var x = (tMember)Session["member"];
}
<!DOCTYPE html>
<html lang="zh-Hant-TW">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>極速配對 | Jouta</title>
    @Styles.Render("~/Content/css/bootstrap.min.css")
    @Styles.Render("~/Content/css/style.css")
    @Styles.Render("~/Content/quickmatch.css")
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css"
          integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ=="
          crossorigin="" />
    <script src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js"
            integrity="sha512-gZwIG9x3wUXg2hdXF6+rVkLF/0Vi9U8D2Ntg4Ga5I5BZpVkVxlJWbSQtXPSiUTtC0TjtGOmxa1AJPuV0CPthew=="
            crossorigin=""></script>
    <link rel="shortcut icon" href="favicon.ico" />
</head>

<body>
    <div class="container-fluid ">
        <!-- navbar -->
        <nav class="navbar navbar-expand-lg navbar-light header" id="main">
            <div class="container">
                <a class="navbar-brand" href="main.html">
                    <img src="~/Content/images/joutalogo_black.png" alt="" width="100">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">@Html.ActionLink("首頁", "Home", "Home", new { }, new { @class = "nav-link nav-main text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找飯局", "EatIndex", "Eat", new { }, new { @class = "nav-link nav-eat text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找旅遊", "TravelIndex", "Travel", new { }, new { @class = "nav-link nav-travel text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("找文章", "Index", "Blog", new { }, new { @class = "nav-link nav-blog text-dark" })</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        @if (Session["member"] != null)
                        {
                            <li class="nav-item nav-link nav-login text-dark">觀迎 @x.f會員名稱 </li>
                            <li class="nav-item">@Html.ActionLink("登出", "Home", "Home", new { id = 0 }, new { @class = "nav-link nav-login text-dark" })</li>
                        }
                        else
                        {
                            <li class="nav-item">@Html.ActionLink("登入", "LoginIndex", "Login", new { }, new { @class = "nav-link nav-login text-dark" })</li>
                        }
                        <li class="nav-item">@Html.ActionLink("註冊", "Register", "Home", new { }, new { @class = "nav-link nav-register text-dark" })</li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <!-- main -->
    <div class="container-fluid text-center">
        <button class="btnLocation" onclick="getLocation()">
            開啟定位尋找附近的TA !
        </button>
        <div class="container">
            <div id="mapid"></div>
        </div>
        <div class="hint">
            <span>將以顯示經緯度之方圓五公里作計算，若無定位將隨機抽選活動!</span>
        </div>
        <div class="fakecontainer">
            <div class="cols">
                <div class="col" ontouchstart="this.classList.toggle('hover');">
                    <div class="container resultTrigger">
                        <div class="front" style="background-image: url(../../Content/images/qm1.jpg)">
                            <div class="inner">
                                <p>找吃貨</p>
                                <span>下班之後吃什麼好呢...?</span>
                            </div>
                        </div>
                        <div class="back">
                            <div class="inner">
                                <p>
                                    SELECT id FROM tEat<br>
                                    ORDER BY RAND()<br>
                                    LIMIT 1!
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col" ontouchstart="this.classList.toggle('hover');">
                    <div class="container resultTrigger">
                        <div class="front" style="background-image: url(../../Content/images/qm2.jpeg)">
                            <div class="inner">
                                <p>找旅伴</p>
                                <span>週末想找朋友出去放鬆心情~</span>
                            </div>
                        </div>
                        <div class="back">
                            <div class="inner">
                                <p>
                                    SELECT id FROM tTravel<br>
                                    ORDER BY RAND()<br>
                                    LIMIT 1!
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- show result -->
    <section class="">
        <div class="container-fluid theBottom">
            <div class="container">
                <div class="d-flex resultbox">
                    <div id="UserBlock">
                        <p>失落的帝國</p>
                        <img src="~/Content/images/memberAvatar.jpg" alt="" class="col-auto ArticlePic">
                        <p>使用者名稱:怕豹</p>
                        <p>使用者評分:5</p>
                    </div>
                    <div class="contentblock">
                        <p>剩餘時間</p><span>17:02:15</span>
                        <p class="content">
                            三亞亞特蘭蒂斯酒店位於海棠北路，雄踞海棠灣，俯瞰迷人的中國南海，距離國際免稅城約數分鐘車程。
                            酒店占地面積約30萬平方米，是融合酒店，餐飲，購物，水樂園以及水族館為一體的綜合性娛樂度假目的地。
                            這裡擁有千餘間寬敞的海景客房及套房...<a href="#">read more</a>

                        </p>
                        <div id="share" class="row justify-content-end pr-4">
                            <button class="btn  btn-warning btn-block" type="submit">更多</button>
                            <button class="btn  btn-warning btn-block" type="submit">分享</button>
                            <button class="btn  btn-warning btn-block" type="submit">留言</button>
                        </div>
                        <br>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- footer -->
    <div class="container-fluid footer">
        <p class="text-center mt-2 mb-2">Copyright © 2020 Jouta All rights reserved</p>
    </div>

    <!-- script -->
    @Scripts.Render("~/Scripts/jquery-3.5.1.js")
    @Scripts.Render("~/Scripts/IIIProject/popper.min.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/IIIProject/navbar.js")
    @Scripts.Render("~/Scripts/IIIProject/location.js")
    @Scripts.Render("~/Scripts/IIIProject/quickmatch.js")

</body>

</html>
