                            <input type="text" size="50" placeholder="Mary123" name="passward" disabled>
                            <h6 class="profiletag">密碼</h6>
                            <input type="text" size="50" placeholder="Maryyyyyy" name="nickname" disabled>
                            <h6 class="profiletag" id="nickname">暱稱</h6>
                            <input type="text" size="50" name="age">
                            <h6 class="profiletag">年紀</h6>
                            <input type="text" size="50" name="birth">
                            <h6 class="profiletag">生日</h6>
                            <input type="text" size="50" name="interest">
                            <h6 class="profiletag">興趣</h6>
                            <input type="text" size="50" name="location">
                            <h6 class="profiletag">所在地區</h6>
                            <input type="text" size="50" name="work">
                            <h6 class="profiletag">工作</h6>
                            <input type="text" size="50" name="intro">
                            <h6 class="profiletag">自我介紹</h6>
                            <textarea id="intro" name="intro" rows="5" cols="50" name="introduction">哈囉!我叫...</textarea><br>
                            <button type="button" class="btn btn-warning">繳交</button>
                        </form>
